 <h2>Editing Book</h2>

<%= form_with model:@book, local:true do |f| %>
  <div class="field"> 
  <label for="book_title">Title</label>
  <%= f.text_field :title %>
  </div>
  <div class="field"> 
  <label for="book_body">Body</label>
  <%= f.text_area :body %>
  </div>
  <%= f.submit 'Create Book' %>
 
 <% end %>
 
<a class="book_path"><%= link_to "Show", book_path %></a>
